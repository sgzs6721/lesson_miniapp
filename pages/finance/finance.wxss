/**finance.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  position: relative;
  padding: 30rpx 0;
  margin-right: 60rpx;
  font-size: 32rpx;
  color: #666;
}

.tab.active {
  color: #333;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: var(--primary-color, #2b85e4);
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 搜索区域 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
  position: relative;
  width: 100%;
  height: 80rpx;
}

.search-box input {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  padding: 0 70rpx 0 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}

.search-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

/* 搜索和添加区域 */
.search-add-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-between;
  align-items: center;
}

.search-add-container .search-box {
  width: 75%;
  margin-right: 20rpx;
}

/* 添加按钮 */
.add-btn {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: white;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 筛选条件 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.arrow-down {
  font-size: 20rpx;
  color: #999;
  margin-left: 6rpx;
}

/* 收支统计 */
.finance-summary {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 500;
}

.summary-item.income .summary-value {
  color: #52c41a;
}

.summary-item.expense .summary-value {
  color: #ff4d4f;
}

.summary-item.balance .summary-value {
  color: #1890ff;
}

/* 缴费记录列表 */
.payment-list {
  flex: 1;
  padding: 20rpx;
}

.payment-item {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.payment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.payment-student {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.payment-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #52c41a;
}

.payment-course {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.payment-meta {
  font-size: 26rpx;
  color: #666;
}

.dot {
  margin: 0 10rpx;
}

/* 收支记录列表 */
.finance-list {
  flex: 1;
  padding: 20rpx;
}

.finance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.finance-info {
  flex: 1;
  margin-right: 20rpx;
}

.finance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.finance-project {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.finance-amount {
  font-size: 32rpx;
  font-weight: 500;
}

.finance-amount.income {
  color: #52c41a;
}

.finance-amount.expense {
  color: #ff4d4f;
}

.finance-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.finance-remark {
  font-size: 26rpx;
  color: #999;
}

.finance-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.action-btn.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background-color: var(--primary-color, #2b85e4);
  color: #fff;
}

/* 详情样式 */
.detail-item {
  margin-bottom: 20rpx;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
