  color: #52c41a;
  font-weight: 500;
}

.lesson-change {
  color: #fa8c16;
  font-weight: 500;
}

.dot {
  margin: 0 10rpx;
}

/* 加载状态 */
.loading-tip, .loading-more {
  text-align: center;
  padding: 40rpx 20rpx;
  font-size: 28rpx;
  color: #999;
  margin: 0 20rpx;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 40rpx;
  font-size: 28rpx;
  color: #999;
  margin: 0 20rpx;
}

.no-more {
  text-align: center;
  padding: 30rpx 20rpx;
  font-size: 26rpx;
  color: #999;
  margin: 0 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  margin-top: 20rpx;
}

/* 收支记录列表 */
.finance-list {
  flex: 1;
  padding: 20rpx;
}

.finance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.finance-info {
  flex: 1;
  margin-right: 20rpx;
}

.finance-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.finance-project {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.finance-amount {
  font-size: 32rpx;
  font-weight: 500;
}

.finance-amount.income {
  color: #52c41a;
}

.finance-amount.expense {
  color: #ff4d4f;
}

.finance-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.finance-remark {
  font-size: 26rpx;
  color: #999;
}

.finance-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.action-btn.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background-color: var(--primary-color, #2b85e4);
  color: #fff;
}

/* 详情样式 */
.detail-item {
  margin-bottom: 20rpx;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
