.payment-amount {
  font-size: 32rpx;
  font-weight: 500;
  color: #52c41a;
}

.course-name {
  font-size: 28rpx;
  color: #333;
}

.lesson-type {
  font-size: 26rpx;
  color: #666;
}

.payment-meta {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.payment-details {
  font-size: 26rpx;
  color: #666;
}

.payment-hours {
  color: #1890ff;
}

.payment-date {
  color: #999;
}

