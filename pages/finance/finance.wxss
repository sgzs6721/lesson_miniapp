/**finance.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: env(safe-area-inset-bottom);
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  position: relative;
  padding: 30rpx 0;
  margin-right: 60rpx;
  font-size: 32rpx;
  color: #666;
}

.tab.active {
  color: #333;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: var(--primary-color, #2b85e4);
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

/* 统计区域 */
.stats-container {
  display: flex;
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 搜索区域 */
.search-container {
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.search-box {
  position: relative;
  width: 100%;
  height: 80rpx;
}

.search-box input {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  padding: 0 70rpx 0 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}

.search-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

/* 搜索和添加区域 */
.search-add-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-between;
  align-items: center;
}

.search-add-container .search-box {
  width: 75%;
  margin-right: 20rpx;
}

/* 添加按钮 */
.add-btn {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: white;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 筛选条件 */
.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.filter-item {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  position: relative;
}

.arrow-down {
  font-size: 20rpx;
  color: #999;
  margin-left: 6rpx;
}

/* 收支统计 */
.finance-summary {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 500;
}

.summary-item.income .summary-value {
  color: #52c41a;
}

.summary-item.expense .summary-value {
  color: #ff4d4f;
}

.summary-item.balance .summary-value {
  color: #1890ff;
}

/* 缴费记录列表 */
.payment-list {
  box-sizing: border-box;
}

.payment-item {
  padding: 30rpx;
  margin: 0 20rpx 20rpx 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.payment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.student-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.payment-amount-container {
  display: flex;
  align-items: center;
}

.payment-icon {
  margin-right: 8rpx;
}

.pay-icon {
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32rpx;
  height: 32rpx;
  background-repeat: no-repeat;
  background-position: center;
  background-size: contain;
}

