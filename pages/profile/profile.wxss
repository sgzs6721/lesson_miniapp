/**profile.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #4A6FFF 0%, #6B8AFF 100%);
  padding: 40rpx 30rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
}

.user-details {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  color: #fff;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.role {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 6rpx;
}

.phone {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.menu-list {
  margin-top: 20rpx;
  background-color: #fff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item-title {
  font-size: 30rpx;
  color: #333;
}

.menu-item-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #999;
  border-right: 2rpx solid #999;
  transform: rotate(45deg);
}

/* 退出登录样式 */
.logout-item {
  margin-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.logout-text {
  color: #ff4757 !important;
}
