/**coach.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.header {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
}

/* 搜索和添加区域 */
.search-add-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-between;
  align-items: center;
}

.search-box {
  position: relative;
  width: 75%;
  height: 80rpx;
  margin-right: 20rpx;
}

.search-box input {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  padding: 0 70rpx 0 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}

.search-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

/* 添加按钮 */
.add-btn {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: white;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 教练列表 */
.coach-list {
  flex: 1;
  padding: 20rpx;
}

.coach-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.coach-info {
  flex: 1;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f0f0f0;
}

.coach-detail {
  flex: 1;
}

.coach-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
}

.coach-gender {
  font-size: 24rpx;
  font-weight: normal;
  color: #666;
  margin-left: 10rpx;
}

.coach-meta, .coach-courses {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.dot {
  margin: 0 10rpx;
}

.coach-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}

.action-btn.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background-color: var(--primary-color, #2b85e4);
  color: #fff;
}

/* 详情样式 */
.detail-item {
  margin-bottom: 20rpx;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}