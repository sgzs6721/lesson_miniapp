/**index.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
  --primary-color: #3cc51f;
  --tab-bar-height: 100rpx;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 校区选择器 */
.campus-selector {
  background-color: #fff;
  padding: 12rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.campus-name {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.arrow {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #666;
}

/* 校区选择弹窗 */
.campus-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.campus-popup.show {
  visibility: visible;
  opacity: 1;
}

.campus-popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.campus-popup-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.campus-popup.show .campus-popup-content {
  transform: translateY(0);
}

.campus-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.campus-popup-close {
  font-size: 40rpx;
  color: #999;
}

.campus-list {
  max-height: 60vh;
}

.campus-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.campus-item.active {
  color: var(--primary-color);
}

.campus-selected-icon {
  color: var(--primary-color);
  font-weight: bold;
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding-bottom: calc(var(--tab-bar-height) + 20rpx);
}

/* 数据卡片 */
.stat-cards {
  display: flex;
  padding: 20rpx;
  flex-wrap: wrap;
}

.stat-card {
  width: calc(50% - 20rpx);
  background-color: #fff;
  border-radius: 12rpx;
  margin: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 区块样式 */
.section {
  margin: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 今日上课学员 */
.student-list {
  background: #fff;
  padding: 0 20rpx;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.student-item:last-child {
  border-bottom: none;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.student-detail {
  font-size: 24rpx;
  color: #666;
}

.student-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.student-status.checked {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.student-status.pending {
  color: #ff9900;
  background: rgba(255, 153, 0, 0.1);
}

.student-status.leave {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

