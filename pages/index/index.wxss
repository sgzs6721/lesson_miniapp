/**index.wxss**/
page {
  height: 100vh;
  background-color: var(--background-color);
  --primary-color: #3cc51f;
  --tab-bar-height: 100rpx;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 校区选择器 */
.campus-selector {
  background: var(--gradient-primary);
  padding: 20rpx 30rpx;
  border-bottom: none;
  color: white;
  box-shadow: 0 4rpx 20rpx rgba(74, 111, 255, 0.2);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.campus-name {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 500;
}

.arrow {
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid white;
}

.date-display {
  font-size: 24rpx;
  opacity: 0.8;
}

/* 校区选择弹窗 */
.campus-popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.campus-popup.show {
  visibility: visible;
  opacity: 1;
}

.campus-popup-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}

.campus-popup-content {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  max-height: calc(70vh - 100rpx);
  background-color: var(--card-background);
  border-radius: 30rpx 30rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
  box-shadow: 0 -10rpx 30rpx var(--shadow-color);
}

.campus-popup.show .campus-popup-content {
  transform: translateY(0);
}

.campus-popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.campus-popup-close {
  font-size: 40rpx;
  color: var(--text-light);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: var(--border-color);
}

.campus-list {
  max-height: calc(60vh - 100rpx);
  padding-bottom: 100rpx;
}

.empty-campus {
  padding: 60rpx 30rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.campus-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.campus-item.active {
  color: var(--primary-color);
  background-color: rgba(74, 111, 255, 0.05);
}

.campus-selected-icon {
  color: var(--primary-color);
  font-weight: bold;
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding-bottom: calc(var(--tab-bar-height) + 20rpx);
}

/* 数据卡片 */
.stat-cards {
  display: flex;
  padding: 20rpx;
  flex-wrap: wrap;
}

.stat-card {
  width: calc(50% - 20rpx);
  background-color: #fff;
  border-radius: 12rpx;
  margin: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 区块样式 */
.section {
  margin: 30rpx 20rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  position: relative;
  overflow: hidden;
}

.section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: var(--gradient-primary);
  border-radius: 8rpx 0 0 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-color);
  padding-left: 10rpx;
}

.section-more {
  font-size: 24rpx;
  color: var(--primary-color);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  background-color: rgba(74, 111, 255, 0.1);
}

/* 今日上课学员 */
.student-list {
  background: transparent;
  padding: 10rpx 0;
}

.student-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FBFCFF;
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
}

.student-item:last-child {
  margin-bottom: 0;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid white;
  box-shadow: 0 2rpx 10rpx var(--shadow-color);
}

.student-info {
  flex: 1;
}

.student-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.student-detail {
  font-size: 24rpx;
  color: var(--text-light);
}

.student-status {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.student-status.present {
  background-color: rgba(107, 203, 119, 0.1);
  color: var(--accent-color);
}

.student-status.absent {
  background-color: rgba(255, 107, 107, 0.1);
  color: var(--danger-color);
}

.student-status.leave {
  background-color: rgba(255, 209, 102, 0.1);
  color: var(--warning-color);
}

/* 数据概览 */
.data-overview {
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  background: var(--card-background);
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 2rpx;
  background-color: var(--border-color);
}

.overview-item {
  background-color: var(--card-background);
  padding: 20rpx 10rpx;
  text-align: center;
}

.overview-value {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 快捷功能 */
.quick-actions-wrapper {
  margin: 30rpx 20rpx;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 20rpx;
}

.quick-action-item {
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  transition: transform 0.3s;
}

.quick-action-item:active {
  transform: scale(0.95);
}

.quick-action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  font-size: 40rpx;
  color: white;
}

.quick-action-icon.add-student {
  background: linear-gradient(135deg, #4A6FFF, #6B8AFF);
}

.quick-action-icon.checkin {
  background: linear-gradient(135deg, #6BCB77, #9BE9A8);
}

.quick-action-icon.payment {
  background: linear-gradient(135deg, #FF6B6B, #FF9E9E);
}

.quick-action-icon.report {
  background: linear-gradient(135deg, #4ECDC4, #7FDFD9);
}

.quick-action-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 空提示 */
.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: var(--text-light);
  font-size: 28rpx;
}

.empty-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 今日课表 */
.schedule-list {
  padding: 10rpx 0;
}

.schedule-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background-color: #FBFCFF;
  border-radius: 12rpx;
  border: 1rpx solid var(--border-color);
}

.schedule-time {
  width: 160rpx;
  font-size: 24rpx;
  color: var(--primary-color);
  font-weight: 500;
  background: rgba(74, 111, 255, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  text-align: center;
  margin-right: 20rpx;
}

.schedule-info {
  flex: 1;
}

.schedule-course {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.schedule-detail {
  font-size: 24rpx;
  color: var(--text-light);
}

.dot {
  margin: 0 10rpx;
}

/* 课表状态 */
.schedule-status {
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
  align-self: flex-start;
  margin-left: 20rpx;
}

.schedule-status.ongoing {
  background-color: rgba(107, 203, 119, 0.1);
  color: var(--accent-color);
}

.schedule-status.completed {
  background-color: rgba(78, 205, 196, 0.1);
  color: var(--info-color);
}

.schedule-status.upcoming {
  background-color: rgba(255, 209, 102, 0.1);
  color: var(--warning-color);
}

/* 数据概览 */
.overview-header {
  padding: 20rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.overview-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-color);
}
