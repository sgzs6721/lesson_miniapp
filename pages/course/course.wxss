/**course.wxss**/
page {
  height: 100vh;
  background-color: var(--background-color);
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: var(--card-background);
  padding: 0 30rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.tab {
  position: relative;
  padding: 30rpx 0;
  margin-right: 60rpx;
  font-size: 32rpx;
  color: var(--text-secondary);
}

.tab.active {
  color: var(--primary-color);
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background: var(--gradient-primary);
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  flex: 1;
  overflow: hidden;
}

/* 搜索和添加课程区域 */
.search-add-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: var(--card-background);
  border-bottom: 1rpx solid var(--border-color);
  justify-content: space-between;
  align-items: center;
}

/* 搜索框 */
.search-box {
  position: relative;
  width: 75%;
  height: 80rpx;
  margin-right: 20rpx;
}

.search-box input {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.05);
  border: none;
  font-size: 28rpx;
  padding: 0 70rpx 0 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
}

.search-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-light);
}

/* 添加按钮 */
.add-btn {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  background: var(--gradient-primary);
  color: white;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 8rpx;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 移除原 action-bar 和 add-btn 样式，避免冲突 */
.action-bar, .add-icon, .fab-add {
  display: none !important;
}

/* 课程列表 */
.course-list {
  flex: 1;
  padding: 0 20rpx 160rpx 20rpx;
  height: 100%;
  box-sizing: border-box;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: var(--card-background);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx var(--shadow-color);
  position: relative;
  overflow: hidden;
}

.course-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 8rpx;
  background: var(--gradient-primary);
  border-radius: 8rpx 0 0 8rpx;
}

.course-info {
  flex: 1;
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-color);
  flex: 1;
}

.course-status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-PUBLISHED {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.status-SUSPENDED {
  background-color: rgba(255, 149, 0, 0.1);
  color: #ff9500;
}

.status-TERMINATED {
  background-color: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.course-coaches {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-top: 8rpx;
}

.course-update-time {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.course-detail {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 12rpx;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  background-color: rgba(107, 203, 119, 0.1);
  color: var(--accent-color);
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.course-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.action-btn.edit {
  background-color: rgba(74, 111, 255, 0.1);
  color: var(--primary-color);
}

.action-btn.delete {
  background-color: rgba(255, 107, 107, 0.1);
  color: var(--danger-color);
}

/* 课表 */
.week-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.week-nav {
  padding: 10rpx 20rpx;
}

.arrow {
  font-size: 32rpx;
  color: #666;
}

.current-week {
  font-size: 28rpx;
  color: #333;
}

.schedule-container {
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
}

.schedule-grid {
  display: flex;
  min-height: 100%;
}

.time-column {
  width: 120rpx;
  flex-shrink: 0;
}

.time-header {
  height: 80rpx;
}

.time-slot {
  height: 100rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.day-column {
  flex: 1;
  border-left: 1rpx solid #f0f0f0;
}

.day-header {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.day-slots {
  position: relative;
}

.course-block {
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  background-color: #e6f7ff;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #1890ff;
  overflow: hidden;
  display: none;
}

.course-block.show {
  display: block;
}

.course-block .course-name {
  font-size: 26rpx;
  margin-bottom: 6rpx;
}

.course-block .course-teacher,
.course-block .course-room {
  font-size: 22rpx;
  color: #666;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 50vh;
  overflow-y: auto;
  padding: 30rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom) + 48px);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}

/* 教练选择器 */
.coach-selector {
  width: 100%;
  min-height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 15rpx 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  line-height: 1.2;
}

.coach-content {
  flex: 1;
  margin-right: 10rpx;
}

.coach-list {
  display: block;
  line-height: 1.4;
}

.coach-name {
  display: inline;
  margin-right: 8rpx;
}

.coach-selector .placeholder {
  color: #999;
}

.coach-selector .arrow {
  color: #999;
  font-size: 24rpx;
  flex-shrink: 0;
}

/* 教练选择弹窗 */
.checkbox-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  min-height: 80rpx;
}

.checkbox-item:last-child {
  border-bottom: none;
}

.checkbox-item checkbox {
  margin-right: 20rpx;
  transform: scale(1.2);
}

.checkbox-item text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom) + 48px);
  border-top: 1rpx solid #eee;
  background-color: #fff;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
  border: none;
  outline: none;
}

.btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background-color: var(--primary-color);
  color: #fff;
}

.modal-footer .btn::after {
  border: none;
}

/* 移除重复的详情样式，使用下面统一的样式 */

/* 空状态和加载状态 */
.empty-tip, .loading-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 26rpx;
}

/* 详情样式 */
.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
  margin-right: 20rpx;
  line-height: 1.5;
  padding-top: 2rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  flex: 1;
  word-break: break-all;
  line-height: 1.4;
}
