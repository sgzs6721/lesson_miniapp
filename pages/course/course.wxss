/**course.wxss**/
page {
  height: 100vh;
  background-color: #f7f7f7;
}

.page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 标签页 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #eee;
}

.tab {
  position: relative;
  padding: 30rpx 0;
  margin-right: 60rpx;
  font-size: 32rpx;
  color: #666;
}

.tab.active {
  color: #333;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: var(--primary-color);
  border-radius: 2rpx;
}

/* 标签内容 */
.tab-content {
  flex: 1;
  overflow: hidden;
}

/* 搜索和添加课程区域 */
.search-add-container {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: space-between;
  align-items: center;
}

/* 搜索框 */
.search-box {
  position: relative;
  width: 75%;
  height: 80rpx;
  margin-right: 20rpx;
}

.search-box input {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
  border: none;
  font-size: 28rpx;
  padding: 0 70rpx 0 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}

.search-icon {
  position: absolute;
  right: 0;
  top: 0;
  width: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999;
}

/* 添加按钮 */
.add-btn {
  width: 20%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2b85e4;
  color: white;
  font-size: 28rpx;
  text-align: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  border: none;
}

.add-btn::after {
  border: none;
}

/* 移除原 action-bar 和 add-btn 样式，避免冲突 */
.action-bar, .add-icon, .fab-add {
  display: none !important;
}

/* 课程列表 */
.course-list {
  flex: 1;
  padding: 0 20rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.course-info {
  flex: 1;
  margin-right: 20rpx;
}

.course-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
}

.course-detail {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.course-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  padding: 4rpx 12rpx;
  background-color: #f0f9eb;
  color: #67c23a;
  border-radius: 4rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
}

.course-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  padding: 8rpx 20rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.action-btn.edit {
  background-color: #e6f7ff;
  color: #1890ff;
}

.action-btn.delete {
  background-color: #fff1f0;
  color: #ff4d4f;
}

/* 课表 */
.week-selector {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.week-nav {
  padding: 10rpx 20rpx;
}

.arrow {
  font-size: 32rpx;
  color: #666;
}

.current-week {
  font-size: 28rpx;
  color: #333;
}

.schedule-container {
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
}

.schedule-grid {
  display: flex;
  min-height: 100%;
}

.time-column {
  width: 120rpx;
  flex-shrink: 0;
}

.time-header {
  height: 80rpx;
}

.time-slot {
  height: 100rpx;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.day-column {
  flex: 1;
  border-left: 1rpx solid #f0f0f0;
}

.day-header {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  line-height: 80rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.day-slots {
  position: relative;
}

.course-block {
  position: absolute;
  left: 10rpx;
  right: 10rpx;
  background-color: #e6f7ff;
  border-radius: 8rpx;
  padding: 10rpx;
  font-size: 24rpx;
  color: #1890ff;
  overflow: hidden;
  display: none;
}

.course-block.show {
  display: block;
}

.course-block .course-name {
  font-size: 26rpx;
  margin-bottom: 6rpx;
}

.course-block .course-teacher,
.course-block .course-room {
  font-size: 22rpx;
  color: #666;
}

/* 弹窗 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s;
}

.modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-header text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  max-height: 60vh;
  overflow-y: auto;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.form-item input,
.form-item .picker {
  width: 100%;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-item textarea {
  width: 100%;
  height: 160rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn.confirm {
  background-color: var(--primary-color);
  color: #fff;
}

/* 课程详情 */
.detail-item {
  margin-bottom: 20rpx;
}

.detail-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.detail-item .value {
  font-size: 28rpx;
  color: #333;
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
