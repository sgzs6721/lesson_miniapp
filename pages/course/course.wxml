<!--course.wxml-->
<view class="page">

  <!-- 顶部标签页 -->
  <view class="tabs">
    <view class="tab {{activeTab === 'course' ? 'active' : ''}}" bindtap="switchTab" data-tab="course">课程列表</view>
    <view class="tab {{activeTab === 'schedule' ? 'active' : ''}}" bindtap="switchTab" data-tab="schedule">本周课表</view>
  </view>

  <!-- 课程列表 -->
  <view class="tab-content" hidden="{{activeTab !== 'course'}}">
    <!-- 搜索和添加课程同一行，使用直角设计 -->
  <view class="search-add-container">
    <view class="search-box">
      <input type="text" placeholder="搜索课程" bindinput="onSearch" value="{{searchKey}}" />
      <view class="search-icon">🔍</view>
    </view>
    <button class="add-btn" bindtap="showAddCourse">添加</button>
  </view>

    <scroll-view class="course-list" scroll-y>
      <view wx:if="{{loading && courseList.length === 0}}" class="loading-tip">加载中...</view>
      <view wx:elif="{{courseList.length === 0}}" class="empty-tip">暂无课程</view>

      <view wx:for="{{courseList}}" wx:key="id" class="course-item">
        <view class="course-info" bindtap="showCourseDetail" data-id="{{item.id}}">
          <view class="course-header">
            <view class="course-name">{{item.name}}</view>
            <view class="course-status status-{{item.status}}">
              {{item.status === 'PUBLISHED' ? '已发布' : (item.status === 'SUSPENDED' ? '已暂停' : '已终止')}}
            </view>
          </view>
          <view class="course-detail">
            <text>{{item.type}}</text>
            <text class="dot"> · </text>
            <text>¥{{item.price}}</text>
            <text class="dot"> · </text>
            <text>总课时{{item.totalHours || 0}}</text>
            <text class="dot"> · </text>
            <text>已销{{item.consumedHours || 0}}</text>
          </view>
          <view class="course-coaches">
            <text>教练：</text>
            <text wx:for="{{item.coaches}}" wx:key="id" wx:for-item="coach">{{coach.name}}{{index < item.coaches.length - 1 ? '、' : ''}}</text>
          </view>
          <view class="course-update-time">
            <text>更新时间：{{item.updateTime || item.createdTime}}</text>
          </view>
        </view>
        <view class="course-actions">
          <view class="action-btn edit" bindtap="editCourse" data-id="{{item.id}}">编辑</view>
          <view class="action-btn delete" bindtap="deleteCourse" data-id="{{item.id}}">删除</view>
        </view>
      </view>

      <!-- 加载更多提示 -->
      <view wx:if="{{loading && courseList.length > 0}}" class="loading-more">加载中...</view>
      <view wx:elif="{{!hasMore && courseList.length > 0}}" class="no-more">没有更多了</view>
    </scroll-view>
  </view>

  <!-- 本周课表 -->
  <view class="tab-content" hidden="{{activeTab !== 'schedule'}}">
    <!-- 周选择器 -->
    <view class="week-selector">
      <view class="week-nav" bindtap="prevWeek">
        <text class="arrow">←</text>
      </view>
      <view class="current-week">{{weekRange}}</view>
      <view class="week-nav" bindtap="nextWeek">
        <text class="arrow">→</text>
      </view>
    </view>

    <!-- 课表 -->
    <scroll-view class="schedule-container" scroll-y>
      <view class="schedule-grid">
        <!-- 时间列 -->
        <view class="time-column">
          <view class="time-header"></view>
          <view wx:for="{{timeSlots}}" wx:key="index" class="time-slot">
            {{item}}
          </view>
        </view>

        <!-- 每天的课程 -->
        <view wx:for="{{weekDays}}" wx:key="day" wx:for-item="day" class="day-column">
          <view class="day-header">{{day.name}}</view>
          <view class="day-slots">
            <view wx:for="{{timeSlots}}" wx:key="index" class="time-slot">
              <view
                wx:for="{{day.courses}}"
                wx:key="id"
                wx:for-item="course"
                class="course-block {{course.timeSlot === item ? 'show' : ''}}"
                style="height: {{course.duration / 30 * 100}}rpx;"
                bindtap="showScheduleDetail"
                data-id="{{course.id}}"
              >
                <view class="course-name">{{course.name}}</view>
                <view class="course-teacher">{{course.teacherName}}</view>
                <view class="course-room">{{course.roomName}}</view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 添加/编辑课程弹窗 -->
  <view class="modal {{showCourseModal ? 'show' : ''}}">
    <view class="modal-mask" bindtap="hideCourseModal"></view>
    <view class="modal-content">
      <view class="modal-header">
        <text>{{editingCourse ? '编辑课程' : '添加课程'}}</text>
        <view class="modal-close" bindtap="hideCourseModal">×</view>
      </view>
      <view class="modal-body">
        <view class="form-item">
          <text class="label">课程名称</text>
          <input type="text" placeholder="请输入课程名称" value="{{courseForm.name}}" bindinput="onCourseFormInput" data-field="name" />
        </view>
        <view class="form-item">
          <text class="label">课程类型</text>
          <picker mode="selector" range="{{courseTypes}}" range-key="constantValue" value="{{courseForm.typeIndex}}" bindchange="onTypeChange">
            <view class="picker">
              {{courseTypes[courseForm.typeIndex].constantValue || '请选择课程类型'}}
            </view>
          </picker>
        </view>
        <view class="form-item">
          <text class="label">课程状态</text>
          <picker mode="selector" range="{{statusOptions}}" value="{{courseForm.statusIndex}}" bindchange="onStatusChange">
            <view class="picker">
              {{statusOptions[courseForm.statusIndex] || '请选择课程状态'}}
            </view>
          </picker>
        </view>
        <view class="form-item">
          <text class="label">上课教练</text>
          <view class="coach-selector" bindtap="showCoachSelector">
            <view class="coach-content">
              <text wx:if="{{selectedCoaches.length === 0}}" class="placeholder">请选择上课教练</text>
              <view wx:else class="coach-list">
                <text wx:for="{{selectedCoaches}}" wx:key="id" class="coach-name">
                  {{item.name}}{{index < selectedCoaches.length - 1 ? ' ' : ''}}
                </text>
              </view>
            </view>
            <text class="arrow">▼</text>
          </view>
        </view>
        <view class="form-item">
          <text class="label">每次消耗课时</text>
          <input type="digit" placeholder="默认值：1.0" value="{{courseForm.unitHours}}" bindinput="onCourseFormInput" data-field="unitHours" />
        </view>
        <view class="form-item">
          <text class="label">课程单价</text>
          <input type="digit" placeholder="默认值：100，单位：元" value="{{courseForm.price}}" bindinput="onCourseFormInput" data-field="price" />
        </view>
        <view class="form-item">
          <text class="label">教练课时费</text>
          <input type="digit" placeholder="默认值：50，单位：元" value="{{courseForm.coachFee}}" bindinput="onCourseFormInput" data-field="coachFee" />
        </view>
        <view class="form-item">
          <text class="label">课程描述</text>
          <textarea placeholder="选填" value="{{courseForm.description}}" bindinput="onCourseFormInput" data-field="description" />
        </view>
      </view>
      <view class="modal-footer">
        <button class="btn cancel" bindtap="hideCourseModal">取消</button>
        <button class="btn confirm" bindtap="saveCourse">确定</button>
      </view>
    </view>
  </view>

  <!-- 教练选择弹窗 -->
  <view class="modal {{showCoachSelector ? 'show' : ''}}">
    <view class="modal-mask" bindtap="hideCoachSelector"></view>
    <view class="modal-content">
      <view class="modal-header">
        <text>选择教练</text>
        <view class="modal-close" bindtap="hideCoachSelector">×</view>
      </view>
      <view class="modal-body">
        <checkbox-group bindchange="onCoachChange">
          <view wx:for="{{coachList}}" wx:key="id" class="checkbox-item">
            <checkbox value="{{item.id}}" checked="{{item.checked}}"/>
            <text>{{item.name}}</text>
          </view>
        </checkbox-group>
      </view>
      <view class="modal-footer">
        <button class="btn cancel" bindtap="hideCoachSelector">取消</button>
        <button class="btn confirm" bindtap="hideCoachSelector">确定</button>
      </view>
    </view>
  </view>

  <!-- 课程详情弹窗 -->
  <view class="modal {{showDetailModal ? 'show' : ''}}">
    <view class="modal-mask" bindtap="hideDetailModal"></view>
    <view class="modal-content">
      <view class="modal-header">
        <text>课程详情</text>
        <view class="modal-close" bindtap="hideDetailModal">×</view>
      </view>
      <view class="modal-body">
        <view class="detail-item">
          <text class="label">课程名称：</text>
          <text class="value">{{currentCourse.name}}</text>
        </view>
        <view class="detail-item">
          <text class="label">课程类型：</text>
          <text class="value">{{currentCourse.type}}</text>
        </view>
        <view class="detail-item">
          <text class="label">课程状态：</text>
          <text class="value">{{currentCourse.status === 'PUBLISHED' ? '已发布' : (currentCourse.status === 'SUSPENDED' ? '已暂停' : '已终止')}}</text>
        </view>
        <view class="detail-item">
          <text class="label">上课教练：</text>
          <text class="value">{{currentCourse.coachNames}}</text>
        </view>
        <view class="detail-item">
          <text class="label">每次消耗课时：</text>
          <text class="value">{{currentCourse.unitHours}}</text>
        </view>
        <view class="detail-item">
          <text class="label">课程单价：</text>
          <text class="value">¥{{currentCourse.price}}</text>
        </view>
        <view class="detail-item">
          <text class="label">教练课时费：</text>
          <text class="value">¥{{currentCourse.coachFee}}</text>
        </view>
        <view class="detail-item">
          <text class="label">总课时：</text>
          <text class="value">{{currentCourse.totalHours}}</text>
        </view>
        <view class="detail-item">
          <text class="label">已消耗课时：</text>
          <text class="value">{{currentCourse.consumedHours}}</text>
        </view>
        <view class="detail-item">
          <text class="label">创建时间：</text>
          <text class="value">{{currentCourse.createdTime}}</text>
        </view>
        <view class="detail-item">
          <text class="label">更新时间：</text>
          <text class="value">{{currentCourse.updateTime}}</text>
        </view>
        <view class="detail-item">
          <text class="label">课程描述：</text>
          <text class="value">{{currentCourse.description || '无'}}</text>
        </view>
      </view>
      <view class="modal-footer">
        <button class="btn confirm" bindtap="hideDetailModal">关闭</button>
      </view>
    </view>
  </view>
</view>
