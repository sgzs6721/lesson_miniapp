/* login.wxss */
page {
  height: 100vh;
  background: linear-gradient(135deg, #4A6FFF 0%, #6B8AFF 100%);
}

.login-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo {
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
  color: white;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 表单容器 */
.form-container {
  width: 100%;
  max-width: 600rpx;
  background: white;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
}

/* 输入组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input {
  flex: 1;
  height: 88rpx;
  padding: 0 60rpx 0 20rpx;
  border: 2rpx solid #E5E5E5;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #FAFAFA;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #4A6FFF;
  background: white;
  box-shadow: 0 0 0 6rpx rgba(74, 111, 255, 0.1);
}

.input.error {
  border-color: #FF6B6B;
  background: #FFF5F5;
}

.input-icon {
  position: absolute;
  right: 20rpx;
  font-size: 32rpx;
  color: #999;
}

.password-toggle {
  cursor: pointer;
  transition: transform 0.2s ease;
}

.password-toggle:active {
  transform: scale(0.9);
}

.error-message {
  font-size: 24rpx;
  color: #FF6B6B;
  margin-top: 10rpx;
  margin-left: 4rpx;
}

/* 忘记密码 */
.forgot-password {
  text-align: right;
  margin-bottom: 40rpx;
}

.forgot-password text {
  font-size: 24rpx;
  color: #4A6FFF;
  text-decoration: underline;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4A6FFF 0%, #6B8AFF 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(74, 111, 255, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
}

.login-btn:not(.loading):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(74, 111, 255, 0.3);
}

.login-btn.loading {
  opacity: 0.7;
  background: #999;
}

.login-btn[disabled] {
  opacity: 0.7;
}

/* 测试账号 */
.test-account {
  text-align: center;
  padding: 20rpx;
  background: #F0F8FF;
  border-radius: 8rpx;
  border: 1rpx dashed #4A6FFF;
}

.test-account text {
  font-size: 24rpx;
  color: #4A6FFF;
}

/* 底部 */
.footer {
  position: absolute;
  bottom: 60rpx;
  text-align: center;
}

.copyright {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 10rpx;
}

.version {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.5);
}
