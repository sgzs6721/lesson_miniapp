.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #eee;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-icon {
  font-size: 20px;
  color: #999;
}

.tab-bar-icon.active {
  color: #3cc51f;
}

.tab-bar-text {
  font-size: 10px;
  color: #999;
}

.tab-bar-text.active {
  color: #3cc51f;
} 