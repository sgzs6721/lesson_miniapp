<!--custom-tab-bar/index.wxml-->
<view class="tab-bar">
  <view wx:for="{{list}}" wx:key="index" class="tab-bar-item {{selected === index ? 'active' : ''}}">
    <view class="tab-bar-content" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
      <view class="tab-bar-icon {{selected === index ? 'active' : ''}}">{{item.icon}}</view>
      <view class="tab-bar-text {{selected === index ? 'active' : ''}}">{{item.text}}</view>
    </view>
    <view wx:if="{{selected === index}}" class="tab-bar-indicator"></view>
  </view>
</view> 